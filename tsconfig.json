{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "sourceMap": false,
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitThis": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "jsx": "react",
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": ["src", "test", "example"],
  "exclude": ["node_modules"]
}
