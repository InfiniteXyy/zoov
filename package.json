{
  "name": "zoov",
  "version": "0.2.0",
  "author": "InfiniteXyy",
  "license": "MIT",
  "main": "dist/zoov.js",
  "unpkg": "dist/zoov.js",
  "module": "dist/zoov.esm.js",
  "types": "dist/types/index.d.ts",
  "homepage": "https://github.com/InfiniteXyy/zoov",
  "description": "A React modular state-management solution, based on Zustand",
  "keywords": [
    "React",
    "State-management",
    "Zustand",
    "Modular"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/InfiniteXyy/zoov"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "prepare": "npm run build",
    "build": "rollup -c",
    "test": "tsd && jest --coverage",
    "test:types": "tsd",
    "dev": "rollup -c --watch",
    "example": "parcel ./example/index.html",
    "playground": "parcel ./playground/index.html",
    "taze": "taze -w major"
  },
  "peerDependencies": {
    "immer": ">=7.0.0",
    "react": ">=16.8.0",
    "zustand": ">=3.3.0"
  },
  "optionalDependencies": {
    "rxjs": ">=7.4.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "codecov": "^3.8.3",
    "immer": "^9.0.6",
    "jest": "^27.2.5",
    "parcel": "^2.0.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.58.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "rxjs": "^7.4.0",
    "taze": "^0.4.5",
    "ts-jest": "^27.0.7",
    "tsd": "^0.18.0",
    "typescript": "^4.4.4",
    "zustand": "^3.5.13"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "tsd": {
    "directory": "test"
